<h1>TODOs</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
    <%= form.submit "Create Todo" %>
  </div>
<% end %>

<h2>Incomplete Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= link_to "Mark as Complete", complete_task_path(task), method: :get %>
    </li>
  <% end %>
</ul>
